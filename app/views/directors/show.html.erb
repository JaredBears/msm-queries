<h2>Director #<%= @director[:id] %> details</h2>
<a href="javascript:history.back()">Go Back</a>

<dl>
  <dt>Name</dt>
  <dd><%= @director[:name] %></dd>
  <dt>DOB</dt>
  <dd><%= @director[:dob] %></dd>
  <dt>Bio</dt>
  <dd><%= @director[:bio] %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @director[:image] %>" width="100" /></dd>
  <dt>Created at</dt>
  <dd><%= @director[:created_at] %></dd>
  <dt>Updated at</dt>
  <dd><%= @director[:updated_at] %></dd>
</dl>

<h3>Filmography</h3>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>
  <% Movie.where(director_id: @director[:id]).each do |movie| %>
    <tr>
      <td><%= movie[:id] %></td>
      <td><img src="<%= movie[:image] %>" width="100" /></td>
      <td><%= movie[:title] %></td>
      <td><%= movie[:year] %></td>
      <td><%= @director[:name] %></td>
      <td><a href="/movies/<%= movie[:id] %>">Show details</a></td>
    </tr>
  <% end %>
</table>
