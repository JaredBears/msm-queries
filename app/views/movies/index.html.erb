<h2>List of All Movies</h2>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th></th>
    </tr>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><img src="<%= movie.image %>" width="100" /></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= Director.where(id: movie.director_id).first.name %></td>
        <td><a href="/movies/<%= movie.id %>">Show details</a></td>
      </tr>
    <% end %>
  </table>
