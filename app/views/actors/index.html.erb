<h2>List of all actors</h2>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      DOB
    </th>

    <th>
    </th>
  </tr>
  <% @actors.each do |actor| %>
    <tr>
      <td>
        <%= actor[:id] %>
      </td>

      <td>
        <img src="<%= actor[:image] %>" width="100" />
      </td>

      <td>
        <%= actor[:name] %>
      </td>

      <td>
        <%= actor[:dob] %>
      </td>

      <td>
        <a href="/actors/<%= actor[:id] %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
